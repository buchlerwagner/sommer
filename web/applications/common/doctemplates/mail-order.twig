{% if items %}
    <table border="0" cellpadding="10" cellspacing="0" style="" width="100%">
        <thead>
        <tr>
            <th align="left" colspan="2" style="border-bottom:2px solid #CCCCCC;">{{ _('LBL_PRODUCT') }}</th>
            <th align="center" style="border-bottom:2px solid #CCCCCC;">{{ _('LBL_QUANTITY') }}</th>
            <th align="right" style="border-bottom:2px solid #CCCCCC;">{{ _('LBL_PRICE') }}</th>
        </tr>
        </thead>
        <tbody>
        {% for cid, item in items %}
            <tr>
                <td width="2%" style="border-bottom:1px solid #CCCCCC;">
                    <a href="{{ domain }}{{ item.url }}"><img src="{{ domain }}{{ item.image }}" width="50" alt="{{ item.name }}"></a>
                </td>
                <td width="73%" style="border-bottom:1px solid #CCCCCC;">
                    <b>{{ item.name }}</b>
                    <p style="color:#cccccc; font-size: 12px;">
                        {% if item.brand %}
                            {{ _('LBL_BRAND') }}: {{ item.brand }}
                        {% endif %}
                        {% if item.variant %}
                            {{ item.variant }}
                        {% endif %}
                    </p>
                </td>
                <td width="10%" align="center" style="border-bottom:1px solid #CCCCCC;">
                    {{ item.quantity.amount }} {{ item.quantity.unit }}
                </td>
                <td width="15%" align="right" style="border-bottom:1px solid #CCCCCC;white-space: nowrap;">
                    {{ _price(item.price.total, currency) }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <table border="0" cellpadding="10" cellspacing="0" style="" width="100%">
        <tr>
            <td>
                <h5>{{ _('LBL_SELECTED_SHIPPING_MODE') }}</h5>
                <p>
                    <b>{{ shippingMode.name }}</b>
                    <br>
                    {{ shippingMode.emailText|nl2br }}
                </p>
            </td>
        </tr>
        <tr>
            <td>
                <h5>{{ _('LBL_SELECTED_PAYMENT_MODE') }}</h5>
                <p>
                    <b>{{ paymentMode.name }}</b>
                    <br>
                    {{ paymentMode.emailText }}
                </p>
            </td>
        </tr>
    </table>


    <br>
    <table border="0" cellpadding="10" cellspacing="0">
        <tr>
            <td>{{ _('LBL_TOTAL') }}:</td>
            <td align="right" style="white-space: nowrap;">{{ _price(subtotal, currency) }}</td>
        </tr>
        {% if discount %}
        <tr>
            <td>{{ _('LBL_DISCOUNT') }}:</td>
            <td align="right" style="white-space: nowrap;">{{ _price(discount, currency) }}</td>
        </tr>
        {% endif %}
        <tr>
            <td>{{ _('LBL_SHIPPING_FEE') }}:</td>
            <td align="right" style="white-space: nowrap;">
                {% if paymentFee %}
                    {{ _price(shippingFee, currency) }}
                {% else %}
                    {{ _('LBL_FREE') }}
                {% endif %}
            </td>
        </tr>
        {% if paymentFee %}
            <tr>
                <td>{{ _('LBL_PAYMENT_FEE') }}:</td>
                <td align="right" style="white-space: nowrap;">{{ _price(paymentFee, currency) }}</td>
            </tr>
        {% endif %}
        <tr>
            <td style="border-top:1px solid #CCCCCC;"><b>{{ _('LBL_GRAND_TOTAL') }}:</b></td>
            <td align="right" style="border-top:1px solid #CCCCCC;white-space: nowrap;"><b>{{ _price(total, currency) }}</b></td>
        </tr>
    </table>
{% endif %}