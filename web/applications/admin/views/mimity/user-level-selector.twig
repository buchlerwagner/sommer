<label class="control-label bold text-primary">
    {{ _(control.label) }}
</label>
{% for groupId, group in control.data.userlevels %}
    <div><b class="text-primary-">{{ _('LBL_GROUP_' ~ groupId) }}</b></div>
    <div class="form-group pl-2">
    {% for roleId, role in group %}
        <div class="custom-control custom-checkbox custom-checkbox-{{ role.color }}">
            <input id="{{ groupId }}-{{ roleId }}" type="checkbox" {% if roleId in values[control.name][groupId] %} checked="checked" {% endif %} name="{{ control.data.formname }}[{{ control.name }}][{{ groupId }}][]" value="{{ roleId }}" class="custom-control-input" />
            <label for="{{ groupId }}-{{ roleId }}" class="custom-control-label">{{ _(role.label) }}</label>
        </div>
    {% endfor %}
    </div>
{% endfor %}